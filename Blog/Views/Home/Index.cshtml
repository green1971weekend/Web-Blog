@model IEnumerable<Post>

@{ 

}
@*<h2>Home Page</h2>

<img src="~/content/static/pexels-photo-1448709.jpeg" width="500"/>*@

<div class="main-img">
    <span class="title">My Blog</span>
</div>

<div class="container">
    @foreach (var post in Model)
    {
        var img_path = $"/Image/{post.Image}";

        <a class="post" asp-controller="Home" asp-action="Post" asp-route-id="@post.Id">
            <img src="@img_path" alt="Downloaded image" />
            <span class="title">
                @post.Title
            </span>
        </a>
    }
</div>